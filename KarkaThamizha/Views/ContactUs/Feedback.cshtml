@model KarkaThamizha.Object.Models.ContactUsModels
@using KarkaThamizha.Common.Utility;
@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- main content -->
<!-- Comments Box -->
<aside class="cat-widget comments-box clearfix" itemprop="comment" itemscope="" itemtype="http://schema.org/UserComments">
    <div id="respond" class="comment-respond" data-showonscroll="true" data-animation="fadeIn">
        <h3 id="reply-title" class="comment-reply-title">உங்கள் கருத்துகள்</h3>

        @using (Html.BeginForm("Feedback", "ContactUs", FormMethod.Post, new { id = "PageFeedback", @class = "comment-form" }))
        {
            @Html.AntiForgeryToken();
            HtmlHelper.UnobtrusiveJavaScriptEnabled = true;

            @*@Html.ValidationSummary(true)*@
            <p class="comment-notes">Your email address will not be published. Required fields are marked <span class="required">*</span></p>
            <span class="errmsg" id="msgPageFeedback"></span>
            <p class="comment-form-author">
                <label for="author">Name <span class="error">*</span></label>
                @Html.TextBoxFor(m => m.Name, new { @class = "toProperCase", autofocus = true, @maxlength = "35", @size = "30" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "error" })
            </p>
            <p class="comment-form-url">
                <label for="mobile">Mobile <span class="error">*</span></label>
                @Html.TextBoxFor(m => m.Mobile, new { @maxlength = "20", @size = "30" })
                @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "error" })
            </p>
            <p class="comment-form-email">
                <label for="email">EMail <span class="error">*</span></label>
                @Html.TextBoxFor(m => m.EMail, new { @class = "toLowerCase", @maxlength = "40", @size = "30" })
                @Html.ValidationMessageFor(m => m.EMail, "", new { @class = "error" })
            </p>

            <p class="comment-form-email">
                <label for="password">Password <span class="error">*</span></label>
                @Html.PasswordFor(m => m.Password, new { @maxlength = "12", @size = "30" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
            </p>
            <p class="comment-form-comment">
                <label for="Comments">Comment</label>
                @Html.TextAreaFor(m => m.Comments, new { @value = "Enter Comments", cols = "45", rows = "8" })
                @*<textarea id="comment" name="comment" cols="45" rows="8" aria-required="true"></textarea>*@
            </p>
            <p class="form-submit">
                <input name="submit" type="submit" id="submitFeedback" value="Post Comment">
            </p>
        }

    </div>
</aside>
@{
    @section scripts{
        <script>
            var masterPageID=@((int)EnumCode.Pages.ContactUs);
            var childPageID=0;
        </script>
        <script src="~/JavaScript/KarkaCommonJS.js"></script>
    }
}