@model KarkaThamizha.Object.Models.ArticleModels
@using KarkaThamizha.Common.Utility

@section metatags{
    <meta name="keywords" content='@ViewBag.MetaKeywords' />
    <meta name="description" content='@ViewBag.MetaDescription' />
}

<aside class="tab-pane animated fadeInDown active" id="recent1">
    <h4 class="hidden">Recent Posts1 - Tab</h4>

    <div class="wdg-classic-posts color-theme clearfix">
        <ul class="list-unstyled">

            @if (Model != null)
            {
                foreach (var bookEvent in Model.LstArticle.Where(x => x.ArticleType.ArticleType == "நான் ஏன் எழுதுகிறேன்?").Take(4))
                {
                    <li class="post-item">
                        <article class="post-box clearfix">
                            <figure class="wdg-col-4 sec-image">
                                <div class="mask-background white"></div>

                                <div class="post-type anim"><i class="icon-camera2"></i></div>

                                <div class="post-thumbnail border-radius-2px">
                                    
                                    @if (bookEvent != null && bookEvent.UserDetail != null && (!string.IsNullOrWhiteSpace(bookEvent.UserDetail.ImgComments)))
                                    {
                                        <img class="border-radius-2px" src="@Url.Content("~/Images-Author/" + bookEvent.UserDetail.ImgComments)" data-src="" alt="" />
                                    }
                                    else
                                    {
                                        <img class="border-radius-2px" src="@Url.Content("http://www.karkathamizha.com/Images-Author/Author.jpg")" data-src="" alt="Tamil Writer" />
                                    }
                                </div>
                            </figure>

                            <div class="wdg-col-8 sec-title">
                                <h5>@Html.ActionLink(Convert.ToString(bookEvent.Header).Substring(0, (Convert.ToString(bookEvent.Header)).Length), "Article", "Article", new { id = bookEvent.ArticleID }, new { target = "_blank" })</h5>
                                <div class="meta-info">
                                    <span class="date"><i class="icon-alarm2"></i>@bookEvent.SourceDate</span><span>@bookEvent.ArticleType.ArticleType</span>
                                </div>
                            </div>
                        </article>
                    </li>
                }
            }
        </ul>
    </div>
</aside>

<aside class="tab-pane animated fadeInDown" id="popular1">
    <h4 class="hidden">Popular Posts1 - Tab</h4>

    <div class="wdg-classic-posts color-theme clearfix">
        <ul class="list-unstyled">
            @if (Model != null)
            {
                foreach (var awardEvent in Model.LstArticle.Where(x => x.ArticleType.ArticleType == "எனக்குப் பிடித்த நூல்கள்").Take(1))
                {
                    <li class="post-item">
                        <article class="post-box clearfix">
                            <figure class="wdg-col-4 sec-image">
                                <div class="mask-background white"></div>
                                <div class="post-type anim"><i class="icon-camera2"></i></div>
                                <div class="post-thumbnail border-radius-2px">
                                    @if (awardEvent.UserDetail.ImgComments != null && awardEvent.UserDetail.ImgComments != "")
                                    {
                                        <img class="border-radius-2px" src="@Url.Content("~/Images-Author/" + awardEvent.UserDetail.ImgComments)" data-src="" alt="" />
                                    }
                                    else
                                    {
                                        <img class="border-radius-2px" src="@Url.Content("http://www.karkathamizha.com/Images-Publisher/Publisher.jpg")" data-src="" alt="" />
                                    }
                                </div>
                                <a href="#" class="more"></a>
                            </figure>

                            <div class="wdg-col-8 sec-title">
                                <span class="btn-srp"><a href="#">Music</a></span>
                                <h5>@Html.ActionLink(Convert.ToString(awardEvent.Header).Substring(0, (Convert.ToString(awardEvent.Header)).Length), "Award", "Article", new { id = awardEvent.ArticleID }, new { target = "_blank" })</h5>
                                <div class="meta-info">
                                    <span class="date"><i class="icon-alarm2"></i>@awardEvent.SourceDate</span><span>@awardEvent.ArticleType.ArticleType</span>
                                </div>
                            </div>
                        </article>
                    </li>
                }
            }
        </ul>
    </div>
</aside>

<aside class="tab-pane animated fadeInDown" id="comments1">
    <h4 class="hidden">Recent Comments1 - Tab</h4>
    <div class="wdg-comments clearfix">
        <ul class="list-unstyled">
            @if (Model != null)
            {
                foreach (var otherEvents in Model.LstArticle.Where(o => o.ArticleType.ArticleType == "எழுத்துக்கு அப்பால்").Take(2))
                {
                    <li class="post-item">
                        <article class="post-box clearfix">
                            <figure class="wdg-col-4 sec-image">

                                <div class="avatar-thumbnail border-radius-2px">
                                    @if (otherEvents.UserDetail.ImgComments != null && otherEvents.UserDetail.ImgComments != "")
                                    {
                                        <img class="border-radius-2px" src="@Url.Content("~/Images-Author/" + otherEvents.UserDetail.ImgComments)" data-src="" alt="" />
                                    }
                                    else
                                    {
                                        <img class="border-radius-2px" src="@Url.Content("http://www.karkathamizha.com/Images-Publisher/Publisher.jpg")" data-src="" alt="" />
                                    }
                                </div>
                                <a href="#" class="more"></a>
                            </figure>

                            <div class="wdg-col-8 sec-title">
                                <div class="meta-info">
                                    <span class="date-time"><i class="icon-alarm2"></i>@otherEvents.SourceDate</span><span>@otherEvents.ArticleType.ArticleType</span>
                                </div>
                                @Html.ActionLink(Convert.ToString(otherEvents.Header).Substring(0, (Convert.ToString(otherEvents.Header)).Length), "PreRelease", "Article", new { id = otherEvents.ArticleID }, new { target = "_blank" })
                            </div>
                        </article>
                    </li>
                }
            }

        </ul>
    </div>
</aside>
