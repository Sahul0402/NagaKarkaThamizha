@model KarkaThamizha.Object.Models.UserModels
@using KarkaThamizha.Common.Utility

@if (Model != null && Model.UserDetail != null)
{
    <aside class="author-box clearfix" itemprop="author" itemscope="" itemtype="http://schema.org/Person" data-showonscroll="true" data-animation="fadeIn">
        <div class="box-title">
            <h3 class="hidden">Written By:</h3>
            <div itemprop="image">
                <img title=@Model.Name alt=@Model.Name src="@Url.Content("~/Images-Author/" + Model.UserDetail.ImgComments)" data-src=@Model.Name onerror="this.onerror = null; this.src = 'http://www.karkathamizha.com/Images-Author/Author1.jpg'" class="avatar">
            </div>
        </div>

        <div class="box-content clearfix">
            <h4 class="name">
                @Html.ActionLink(@Model.UserName, "AuthorDetails", "Author", new { Name = @Model.UserName.Replace(" ", "-") }, new { @class = "divfloat", target = "_blank" })
            </h4>

            <div itemprop="description">
                <p>@Model.UserDetail.Profile.ToString().Chop(20)</p>
            </div>

            <div class="social-icons">
                <ul class="clearfix">
                    <li class="tooltip_item fb-metro-but-16" data-toggle="tooltip" data-placement="top" data-original-title="facebook">
                        <div class="mask-background animated lightSpeedIn"></div>
                        <a href="@Url.Content("https://www.facebook.com/" + Model.UserDetail.FaceBook)" title="Facebook" target="_blank"><i class="zoc-facebook"></i></a>
                    </li>

                    <li class="tooltip_item twitter-metro-but-16" data-toggle="tooltip" data-placement="top" title="" data-original-title="twitter">
                        <div class="mask-background animated lightSpeedIn"></div>
                        <a href="#" title="Twitter" target="_blank"><i class="zoc-twitter"></i></a>
                    </li>

                    <li class="tooltip_item googleplus-metro-but-16" data-toggle="tooltip" data-placement="top" title="" data-original-title="google+">
                        <div class="mask-background animated lightSpeedIn"></div>
                        <a href="#" title="GooglePlus" target="_blank"><i class="zoc-gplus"></i></a>
                    </li>

                    <li class="tooltip_item pinterest-metro-but-16" data-toggle="tooltip" data-placement="top" title="" data-original-title="pinterest">
                        <div class="mask-background animated lightSpeedIn"></div>
                        <a href="#" title="Pinterest" target="_blank"><i class="zoc-pinterest"></i></a>
                    </li>

                    <li class="tooltip_item youtube-metro-but-16" data-toggle="tooltip" data-placement="top" title="" data-original-title="youtube">
                        <div class="mask-background animated lightSpeedIn"></div>
                        <a href="#" title="YouTube" target="_blank"><i class="zoc-youtube"></i></a>
                    </li>

                    <li class="tooltip_item wikipedia-metro-but-16" data-toggle="tooltip" data-placement="top" title="" data-original-title="wikipedia">
                        <div class="mask-background animated lightSpeedIn"></div>
                        <a href="@Url.Content("https://ta.wikipedia.org/wiki/" + Model.UserDetail.Wikipedia)" title="Wikipedia" target="_blank"><i class="zoc-wikipedia"></i></a>
                    </li>

                    <li class="tooltip_item flickr-metro-but-16" data-toggle="tooltip" data-placement="top" title="" data-original-title="flickr">
                        <div class="mask-background animated lightSpeedIn"></div>
                        <a href="#" title="Flickr" target="_blank"><i class="zoc-flickr"></i></a>
                    </li>

                    <li class="tooltip_item email-metro-but-16" data-toggle="tooltip" data-placement="top" title="" data-original-title="send an email">
                        <div class="mask-background animated lightSpeedIn"></div>
                        <a href="mailto:" title="Email" target="_blank"><i class="zoc-email"></i></a>
                    </li>

                    @if (Model.UserDetail.BlogType == "W")
                    {
                        <li class="tooltip_item wordpress-metro-but-16" data-toggle="tooltip" data-placement="top" title="" data-original-title="wordpress">
                            <div class="mask-background animated lightSpeedIn"></div>
                            <a href="#" title="Wordpress" target="_blank"><i class="zoc-wordpress"></i></a>
                        </li>
                    }
                    else
                    {
                        <li class="tooltip_item blogger-metro-but-16" data-toggle="tooltip" data-placement="top" title="" data-original-title="blogger">
                            <div class="mask-background animated lightSpeedIn"></div>
                            <a href="#" title="Blogger" target="_blank"><i class="zoc-blogger"></i></a>
                        </li>
                    }

                    <li class="tooltip_item website-metro-but-16" data-toggle="tooltip" data-placement="top" title="Website" data-original-title="visit Author's website">
                        <div class="mask-background animated lightSpeedIn"></div>
                        <a href="@Url.Content("http://www." + Model.UserDetail.Website)" title="Website" target="_blank"><i class="zoc-ie"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </aside>
}

