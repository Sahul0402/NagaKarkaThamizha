
@{
    ViewBag.Title = "UserProfile";
}

<h2>UserProfile</h2>

<div class="tab-content" style="padding-top:10px;">
    <div class="form-group">
        <label for="Name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control toProperCase" id="Name" placeholder="Name (ex.Tamil)" maxlength="35" required />
        </div>
    </div>
    <div class="form-group">
        <label for="Mobile" class="col-sm-2 control-label">Mobile</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Mobile" placeholder="Mobile" maxlength="20" required />
        </div>
    </div>
    <div class="form-group">
        <label for="EMail" class="col-sm-2 control-label">EMail</label>
        <div class="col-sm-10">
            <input type="text" class="form-control toLowerCase" id="EMail" placeholder="EMail" onblur="ValidateEmail(this)" maxlength="40" required />
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="Password" placeholder="Password" maxlength="12" minlength="8" required />
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Date of Birth</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" id="dob" placeholder="MM-dd" required />
        </div>
    </div>
    <div class="form-group">
        <label for="commentsImage" class="col-sm-2 control-label">Comments Image</label>
        <div class="col-sm-10">
            <input type="file" class="form-control" name="commentsImage" id="commentsImage" />
        </div>
    </div>
    <div class="form-group">
        <label for="profileImage" class="col-sm-2 control-label">Profile Image</label>
        <div class="col-sm-10">
            <input type="file" class="form-control" name="profileImage" id="profileImage" multiple />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
        </div>
        <div class="col-sm-10">
            <button type="submit" id="Register" class="btn btn-warning btn-sm">Register</button>
            <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancel</button>
        </div>
    </div>
</div>

