}

<!-- main content -->
<article class="article-container clearfix" itemscope itemtype="http://schema.org/Article">

    <div class="article-content clearfix">
        <header>
            <div class="breadcrumb-container clearfix" itemscope itemtype="http://schema.org/WebPage">
                <ul class="breadcrumb ltr" itemprop="breadcrumb">
                    <li><i class="icon-home3"></i><a href="#">Home</a></li>
                    <li><a href="#">Technology</a></li>
                    <li><a href="#">Smartphones</a></li>
                    <li>@Model.Header</li>
                </ul>
            </div>

            <div class="figure-container">
                <figure class="featured-post-figure" itemprop="associatedMedia" itemscope itemtype="http://schema.org/ImageObject">
                    <a data-lightbox="true" title="Image With Image + Lightbox" href="~/Images-Website/8.png"><img itemprop="contentURL" src="~/Images-Website/7.jpg" data-src="" /></a>
                    <figcaption itemprop="description">A few words about item</figcaption>
                </figure>
            </div>

            <h3 itemprop="headline">@Model.Header</h3>

            <div class="post-meta">
                <ul>
                    @*<li><i class="icon-user3"></i><a href="#">@content.MagazineName</a></li>*@
                    <li><i class="icon-library"></i><a href="#">World</a></li>

                    <li itemprop="datePublished"><i class="icon-alarm2"></i>@Model.EventsDate.Value.ToString("dd-MM-yyyy")</li>
                    <li><i class="icon-bubbles4"></i><a href="#" itemprop="interactionCount">4 Comments</a></li>
                    <li itemprop="interactionCount"><i class="icon-tv"></i>35</li>
                    <li itemprop="interactionCount"><i class="icon-heart"></i>100</li>
                </ul>
            </div>

            <div class="divider"></div>
        </header>

        <div itemprop="articleBody">
            <span style="color:red;">முன் பதிவு செய்ய கடைசி நாள்: </span>@Model.EndDate.Value.ToShortDateString()<br /><br />
        </div>

        <div class="post-entry" itemprop="articleBody">

            <span class="drop-capital"></span>

            @if (string.IsNullOrEmpty(Model.Description))
            {
        <p>
            <img src="@Url.Content("../Images-Events/" + Model.ImgPath)" alt=@Model.Header />
        </p>
            }
            else
            {
                @Html.Raw(Server.HtmlDecode(Model.Description))
                if (Model.ImgPath != null)
                {
                    <img src="@Url.Content("../Images-Events/" + Model.ImgPath)" alt=@Model.Header />
                }
            }

            <nav class="post-navigation clearfix">
